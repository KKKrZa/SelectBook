/* pages/majorSelector.wxss */
page {
  display: flex;
  flex-direction: column;
  background-color: rgb(246,246,246);
}

.title{
  font-size: 1.8rem;
  font-weight: bold;
  margin: 1em auto 1em;
}

.search {
  background-color: var(--bg-color-demo);
}

.search:not(:last-child) {
  margin-bottom: 32rpx;
}

.loading-container-flex {
  display: flex;
  height: 55%;
  justify-content: center;
  align-items: center;
}

.large {
  --td-loading-text-font-size: 32rpx;
}

.external-class-image {
  width: 300px;
  height: 300px;
}

.button {
  margin: 32rpx;
  display: flex;
  justify-content: space-between;
}

.block{
  margin-bottom: 30%;
}